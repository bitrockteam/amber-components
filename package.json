{
  "name": "@amber-ds/components",
  "version": "1.0.1",
  "main": "index.js",
  "displayName": "Amber Design / Components",
  "config": {
    "themeColor": "#e74e0f"
  },
  "publishConfig": {
    "access": "public"
  },
  "description": "Web Components implementation of the Amber Design System.",
  "repository": "git@github.com:bitrockteam/amber-components.git",
  "author": "Salvatore Laisa <salvatore.laisa@bitrock.it>",
  "contributors": [
    "Alessandro Menini <alessandro.menini@bitrock.it>"
  ],
  "license": "MIT",
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "create:component": "ts-node ./scripts/generator.ts",
    "dev": "NODE_ENV=development webpack-dev-server --hot",
    "start": "npm run storybook",
    "build:js": "NODE_ENV=production webpack",
    "build:clean": "rm -rf ./dist",
    "build:storybook": "npm run build:clean && build-storybook -c .storybook -o ./dist",
    "build": "NODE_ENV=production npm run build:js",
    "deploy": "NODE_ENV=production npm run build:storybook && gh-pages -d dist",
    "test:unit": "NODE_ENV=test jest",
    "test": "npm run test:unit"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@storybook/addon-actions": "4.1.11",
    "@storybook/addon-console": "1.1.0",
    "@storybook/addon-knobs": "4.1.11",
    "@storybook/addon-notes": "4.1.11",
    "@storybook/addon-options": "4.1.11",
    "@storybook/polymer": "4.1.11",
    "@types/jest": "24.0.0",
    "@types/node": "10.12.21",
    "babel-loader": "8.0.5",
    "css-loader": "2.1.0",
    "fs-extra": "7.0.1",
    "gh-pages": "2.0.1",
    "jest": "24.1.0",
    "node-sass": "4.11.0",
    "polymer-webpack-loader": "2.0.3",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "to-string-loader": "1.1.5",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.2",
    "typescript": "3.3.1",
    "typescript-require": "0.2.10",
    "webpack": "4.29.2",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14"
  },
  "dependencies": {
    "@amber-ds/visual": "1.0.1",
    "lit-element": "2.0.1"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "ts-node/register"
    ]
  }
}
