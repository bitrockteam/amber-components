{
  "name": "amber-components",
  "version": "1.0.0-alpha",
  "main": "src/index.js",
  "displayName": "Amber Design / Components",
  "config": {
    "themeColor": "#e74e0f"
  },
  "description": "Your next awesome project",
  "repository": "git@github.com:bitrock-frontend/basic-starter-kit.git",
