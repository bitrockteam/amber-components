    "html-webpack-plugin": "3.2.0",
    "jsdom": "11.11.0",
    "node-sass": "4.9.2",
    "sass-loader": "7.0.3",
    "style-loader": "0.21.0",
    "to-string-loader": "1.1.5",
    "ts-loader": "5.2.2",
    "typescript": "3.1.3",
    "webpack": "4.16.1",
    "webpack-cli": "3.0.8",
    "webpack-dev-server": "3.1.9",
    "webpack-pwa-manifest": "3.6.2",
    "workbox-webpack-plugin": "3.4.1"
